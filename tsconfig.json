{
  "compilerOptions": {
    "lib": [
      "dom",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": false,
    "noEmit": false,
    "jsx": "react-jsx",
    "target": "es2020",
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "**/node_modules",
    "**/.*/",
    // This is the path to the generated types from removed typechain
    "**/config/abi/types/",
    "**/abis/types/*.ts"
  ],
  "include": [
    "next-env.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}